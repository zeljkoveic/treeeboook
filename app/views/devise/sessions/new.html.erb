<div class="row">
	<div class="col-md-4">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "well form-horizontal"}) do |f| %>

		<fieldset>
			<legend>Sign In</legend>

			<%= f.input :email %>
  			<%= f.input :password %>

  			<% if devise_mapping.rememberable? -%>
  			<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div><br />

		
		</fieldset>
  		   
  		<% end -%>

  		<div><%= f.button :submit, "Sign In", :class => 'btn btn-default' %></div>


		<% end %>

		<%= render "devise/shared/links" %>
	</div>
	
	<div class="col-md-8 well">
		<fieldset>
			<legend>Join our Hyper-network and have fun!</legend>
			<p>Our mission is wild.</p>
			<p>We are young, fast, cretive, smart. We sleep running and run driving.</p>
			<p>We shape the hypersphere you like to call Earth.</p>
			<h3><%= link_to "Welcome!", new_registration_path(resource_name) %></h3>
		</fieldset>
	</div>

</div>
  
  



