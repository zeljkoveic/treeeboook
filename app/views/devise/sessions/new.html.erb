<div class="row">
	<div class="col-md-4">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "well form-horizontal"}) do |f| %>

		<fieldset>
			<legend>Sign In</legend>

			<%= f.input :email %>
  			<%= f.input :password %>

  			<% if devise_mapping.rememberable? -%>
  			<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div><br />

		
		</fieldset>
  		   
  		<% end -%>

  		<div><%= f.button :submit, "Sign in", :class => 'btn btn-default' %></div>


		<% end %>

		<%= render "devise/shared/links" %>
	</div>
	
	<div class="col-md-8">
		<h2>Singning in is easy and secure</h2>
	</div>
	
</div>
  
  



