<div class="row">
  <div class="col-md-4">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "well form-horizontal"}) do |f| %>
  <fieldset>
    <legend>Register</legend>
    <%= devise_error_messages! %>

    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :profile_name %>
    <%= f.input :email %>
    <%= f.input :password, autocomplete: 'off' %>
    <%= f.input :password_confirmation, autocomplete: 'off' %>

  <br />
  </fieldset>
  

  <div><%= f.button :submit, "Sign up", :class => 'btn btn-default'  %></div>
<% end %>
</div>

<div class="col-md-8 well">
    <fieldset>
      <legend>Join our Hyper-network and have fun!</legend>
      <p>Our mission is wild.</p>
      <p>We are young, fast, cretive, smart. We sleep running and run driving.</p>
      <p>We shape the hypersphere you like to call Earth.</p>
      <h3><%= link_to "Welcome!", '#' %></h3>
    </fieldset>
  </div>

</div>

<%= render "devise/shared/links" %>
