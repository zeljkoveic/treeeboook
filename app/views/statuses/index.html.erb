<h1 class="page-header">All of the Statuses</h1>

<%= link_to "Post a New Status", new_status_path, class: "btn btn-success" %>

<% @statuses.each do |status| %>
<div class="status" onmouseover="addShade(this)" onmouseout="removeShade(this)">

	<div class="row">
		<div class="col-md-1">
			<%= image_tag status.user.gravatar_url %>

		</div>
	
		<div class="col-md-11">
  			<strong><%= link_to status.user.full_name, profile_path(status.user.profile_name) %></strong>

    			<p><%= status.content %></p>
    		<div class="meta">
        		<%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        		<span class="admin"> | 
          		<%= link_to "Edit", edit_status_path(status) %> | 
          		<%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure??"} %>

    		</div>  
		</div>
	</div>
	
</div>      
<% end %>