<div class="page-header">

	<div class="row">
		<div class="col-md-1">
			<%= image_tag @user.gravatar_url %>

		</div>

		<div class="col-md-11">
			<h1><%= @user.full_name  %></h1>

		</div>

	
</div>

<div class="profilee">
<% if @statuses %>
	<% @statuses.each do |status| %>
		<div class="well">
			<%= status.content %>
			<hr />
			<%= link_to time_ago_in_words(status.created_at) + " ago", status_path(status) %>
		</div>
	<% end %>
<% end %>
</div>